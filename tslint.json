{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "**/*.js"
    ]
  },
  "rules": {
    "no-console": [
      true,
      {
        "severity": "warning"
      }
    ],
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "ordered-imports": false,
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "prefer-const": false,
    "curly": [
      false
    ],
    "forin": false,
    "no-unused-variable": [
      true,
      {
        "severity": "warning"
      }
    ]
  }
}
