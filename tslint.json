{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "**/*.js"
    ]
  },
  "rules": {
    "no-console": [
      true,
      {
        "severity": "warning"
      }
    ],
    "no-invalid-this": [true, "check-function-in-method"],
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "member-ordering": false,
    "comment-format": [
      false,false,false
    ],
    "object-literal-sort-keys": false,
    "member-access": false,
    "ordered-imports": false,
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "prefer-const": false,
    "defaultSeverity": "warning",
    "curly": [
      false
    ],
    "forin": false,
    "no-unused-variable": [
      true,
      {
        "severity": "warning"
      }
    ]
  }
}
